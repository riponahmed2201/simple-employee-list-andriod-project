<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_centerInParent="true"
            android:text="Employee List"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="7"
        android:background="#fff"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">

        <Button
            android:id="@+id/riponId"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_700"
            android:text="@string/ripon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/sunnyId"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_700"
            android:text="@string/sunny_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/ferozId"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_700"
            android:text="@string/feroz_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/arifId"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_700"
            android:text="@string/arif_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>